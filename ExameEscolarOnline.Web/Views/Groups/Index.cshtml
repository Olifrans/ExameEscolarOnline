@model PaginaDeResultado<ExameEscolar.ViewModels.ExameViewModel>

@{
    ViewData["Title"] = "Index";
}



<h1>Exame Documentos</h1>

<div>
    <br />

    <a asp-action="Create" asp-controller="Groups" class="btn btn-primary">Create</a>
    <div>
        <table id="groupGrid"
               class="table table-striped table-bordered dt-resposive nowrap"
               width="100%" cellspacing="0">

            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.DataInicio</td>  @*// verificar o controllers para alterar para ( <td>@item.Nome</td>)*@
                        <td>@item.Descricao</td>

                        <td>
                                <a asp-action="Detalhes" asp-controller="Groups"
                                   asp-all-route-data="@(new Dictionary<string, string>{{ "groupId", item.Id.ToString()}})"
                                   class="btn btn-primary">Result</a>
                            </td>

                    </tr>
                }

            </tbody>
        </table>

        <cs-pager cs-paging-paginatamanho=(int)Model.PaginaTamanho
                  cs-paging-paginanumero=(int)Model.PaginaNumero
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-paginanumero-param="paginanumero"
                  asp-controller="Groups"
                  action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>



@section scripts{
    <script>
        $(document).ready(function () {
            $('#groupGrid').DataTable({
                "paging": false,
                "filter": true,
            });
        });
    </script>
}







