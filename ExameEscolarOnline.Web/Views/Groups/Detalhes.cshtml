@model ExameEscolar.ViewModels.GroupsViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@Model.Nome</h1>

<h3>Estudante</h3>
<form asp-action="Detalhes" asp-controller="Groups" method="post">
    <input type="hidden" asp-for="Id"/>
    <ul>
        @for (int i = 0; i < Model.EstudanteCheckList.Count; i++)
        {
            <li>
                <input type="checkbox" asp-for="@Model.EstudanteCheckList[i].Selecione" />
                <label for="@Model.EstudanteCheckList[i].Nome">@Model.EstudanteCheckList[i].Nome</label>
                <input type="hidden" asp-for="@Model.EstudanteCheckList[i].Id" />
                <input type="hidden" asp-for="@Model.EstudanteCheckList[i].Nome" />
            </li>
        }
    </ul>
    <button type="submit" name="action">Update</button>
</form>









