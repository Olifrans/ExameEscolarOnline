@model PaginaDeResultado<ExameEscolar.ViewModels.QnAsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Exame Documentos</h1>

<div>
    <br />

    <a asp-action="Create" asp-controller="QnAs" class="btn btn-primary">Create</a>
    <div>
        <table id="estudanteGrid"
               class="table table-striped table-bordered dt-resposive nowrap"
               width="100%" cellspacing="0">

            <thead>
                <tr>
                    <th>Perguntas</th>
                    <th>Opcao1</th>
                    <th>Opcao2</th>
                    <th>Opcao3</th>
                    <th>Opcao4</th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.Pergunta</td>
                        <td>@item.Opcao1</td>
                        <td>@item.Opcao2</td>
                        <td>@item.Opcao3</td>
                        <td>@item.Opcao4</td>

                        @*<td>
                            <a asp-action="Result" asp-controller="QnAS"
                               asp-all-route-data="@(new Dictionary<string, string>{{ "estudanteId", item.Id.ToString()}})"
                               class="btn btn-primary">Result</a>
                        </td>*@

                    </tr>
                }

            </tbody>
        </table>

        <cs-pager cs-paging-paginatamanho=(int)Model.PaginaTamanho
                  cs-paging-paginanumero=(int)Model.PaginaNumero
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-paginanumero-param="paginanumero"
                  asp-controller="QnAs"
                  action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>



@section scripts{
    <script>
        $(document).ready(function () {
            $('#qnaGrid').DataTable({
                "paging": false,
                "filter": true,
            });
        });
    </script>
}


























