@*@model IEnumerable<ExameEscolar.ViewModels.UsuarioViewModel> *@
@model PaginaDeResultado<ExameEscolar.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Usuário</h1>

<div>
    <br />

    <a asp-action="Create" asp-controller="Usuario" class="btn btn-primary">Create</a>
    <div>
        <table id="userGrid"
               class="table table-striped table-bordered dt-resposive nowrap"
               width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Nome de Usuário</th>
                    <th>Função</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.UsuarioNome</td>
                        <td>Professor</td>
                    </tr>
                }

            </tbody>
        </table>

        <cs-Pager cs-paging-paginatamanho=(int)Model.PaginaTamanho
                  cs-paging-paginanumero=(int)Model.PaginaNumero
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-paginanumero-param="paginanumero"
                  asp-controller="Usuario"
                  action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-Pager>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#userGrid').DataTable({
                "paging": false,
                "filter": true,
            });
        });
    </script>
}












