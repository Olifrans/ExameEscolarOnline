@model ExameEscolar.ViewModels.EstudanteViewModel

@{
    ViewData["Title"] = "Perfil";
}

<h1>Perfil Estudante</h1>

@*<h4>EstudanteViewModel</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Perfil" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <img id="imgPicture" src="@Model.ImagemNomeArquivo" style="height:64px; width:64px;" />
                <input asp-for="ImagemArquivo" type="file" 
                       style="position:absolute; top:0px; height:64px; width:64px; opacity:0; z-index:100;" />
            </div>


            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="UsuarioNome" class="control-label"></label>
                <input asp-for="UsuarioNome" class="form-control" />
                <span asp-validation-for="UsuarioNome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contato" class="control-label"></label>
                <input asp-for="Contato" class="form-control" />
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CVNomeArquivo" class="control-label"></label>
                @if (Model.CVNomeArquivo != null)
                {
                    <a href="@Model.CVNomeArquivo" target="_blank">Download/View CV</a>
                }
                <input asp-for="CVNomeArquivo" type="file" style="top: 0px;" />
            </div>


            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>


