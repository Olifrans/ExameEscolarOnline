@model IEnumerable<ExameEscolar.ViewModels.ResultadoViewModel>

@{
    ViewData["Title"] = "ViewResultado";
}

<h1>Resultado do Exames dos Estudantes</h1>

 <div>
     <br />
    <div>
        <table id="resultadoGrid"
               class="table table-striped table-bordered dt-resposive nowrap"
               width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Exame Nome</th>
                    <th>Total de Peguntas</th>
                    <th>Resposta Correta</th>
                    <th>Resposta Errada</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExameNome</td>
                        <td>@item.TotalDeQuestoes</td>
                        <td>@item.RespostaCorreta</td>
                        <td>@item.RespostaErrada</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
 </div>

<div>
    <a asp-action="Perfil">Perfil List</a>
</div>




